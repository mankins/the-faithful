{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase use the-faithful && GCLOUD_PROJECT=the-faithful COMMIT_SHA=$(git rev-parse HEAD) firebase emulators:start --project the-faithful",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "pretty": "prettier --write .",
    "lint": "eslint --ext .js .",
    "lint:fix": "eslint --fix --ext .js .",
    "pubsub": "gcloud beta emulators pubsub start"
  },
  "engines": {
    "node": "14"
  },
  "main": "index.js",
  "dependencies": {
    "@google-cloud/logging": "^9.0.1",
    "@google-cloud/pubsub": "^2.10.0",
    "@google-cloud/secret-manager": "^3.4.0",
