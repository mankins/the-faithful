    "ably": "^1.2.6",
    "accept-language-parser": "^1.5.0",
    "address-rfc2822": "^2.1.0",
    "base58": "^2.0.1",
    "btoa": "^1.2.1",
    "canvas": "^2.7.0",
    "canvas-multiline-text": "^1.0.3",
    "cheerio": "^1.0.0-rc.5",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.13.1",
    "flat": "^5.0.2",
    "geoip-lite": "^1.4.2",
    "handlebars": "^4.7.7",
    "inline-css": "^3.0.0",
